<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>CHECK24 Startseite</title>
    <style>
        html {
            box-sizing: border-box;
        }

        *,
        *:before,
        *:after {
            box-sizing: inherit;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .info {
            color: #005ea8;
        }

        #container {
            width: 100vw;
            padding-left: 20px;
            padding-right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .c {
            flex-grow: 1;
            border: 2px solid #005ea8;
            border-radius: 10px;
            display: flex;
        }

        #betrag {
            font-family: 'Courier New', Courier, monospace;
            color: grey;
        }

        p {
            width: 100%;
            text-align: right;
        }
    </style>

</head>

<body>
<div id="container">
    <% table.forEach(function(item) { %>
        <div class="c">
            <img src="<%= item.image %>">
            <div style="flex-grow: 1">
                <p><%= item.name %></p>
                <p id="betrag"><%= item.price %> â‚¬</p>
            </div>
        </div>
    <% }); %>
</div>
</body>
</html>